{
  "scoring": {
    "weights": {
      "quality": 0.35,
      "relevance": 0.30,
      "seo": 0.20,
      "engagement": 0.15
    },
    "quality": {
      "minResolutionHero": 1920,
      "minResolutionStandard": 1200,
      "minResolutionThumbnail": 600,
      "preferredAspectRatios": {
        "hero": 1.78,
        "standard": 1.5,
        "thumbnail": 1.33
      },
      "aspectRatioTolerance": 0.15,
      "watermarkPenalty": -50,
      "lowResolutionPenalty": -30
    },
    "relevance": {
      "exactKeywordMatch": 30,
      "partialKeywordMatch": 15,
      "contextMatch": 20,
      "geographicRelevance": 10
    },
    "seo": {
      "goodFilename": 15,
      "hasMetadata": 10,
      "photographerQuality": 10,
      "uniqueness": 15
    },
    "engagement": {
      "humanFaces": 20,
      "warmTones": 10,
      "professionalComposition": 15,
      "actionElements": 10
    },
    "autoSelectThreshold": 85,
    "candidatesPerSource": 20,
    "totalCandidatesTarget": 60
  },
  "api": {
    "pexels": {
      "baseUrl": "https://api.pexels.com/v1",
      "rateLimit": {
        "requestsPerHour": 200,
        "requestsPerMinute": 50
      },
      "timeout": 30000
    },
    "pixabay": {
      "baseUrl": "https://pixabay.com/api",
      "rateLimit": {
        "requestsPerHour": 5000,
        "requestsPerMinute": 100
      },
      "timeout": 30000
    },
    "unsplash": {
      "baseUrl": "https://api.unsplash.com",
      "rateLimit": {
        "requestsPerHour": 50,
        "requestsPerMinute": 5
      },
      "timeout": 30000
    },
    "retryConfig": {
      "maxRetries": 4,
      "initialDelay": 2000,
      "backoffMultiplier": 2
    }
  },
  "optimization": {
    "formats": ["webp", "jpg"],
    "sizes": {
      "hero": [1920, 1600, 1024, 640],
      "standard": [1200, 1024, 640, 400],
      "thumbnail": [800, 600, 400]
    },
    "quality": {
      "webp": 85,
      "jpg": 90
    },
    "targetMaxSize": {
      "hero": 204800,
      "standard": 153600,
      "thumbnail": 102400
    }
  },
  "refresh": {
    "schedules": {
      "hero": 90,
      "neighborhood": 120,
      "blog": 180,
      "trust": 240
    },
    "triggers": {
      "performanceDropThreshold": 0.20,
      "engagementDropThreshold": 0.25,
      "rankingDropThreshold": 5
    },
    "seasonal": {
      "spring": {
        "months": [3, 4, 5],
        "keywords": ["spring", "blooming", "fresh", "bright"]
      },
      "summer": {
        "months": [6, 7, 8],
        "keywords": ["summer", "sunny", "vibrant", "outdoor"]
      },
      "fall": {
        "months": [9, 10, 11],
        "keywords": ["fall", "autumn", "warm tones", "cozy"]
      },
      "winter": {
        "months": [12, 1, 2],
        "keywords": ["winter", "snowy", "warm interior", "holidays"]
      }
    }
  },
  "monitoring": {
    "qualityChecks": {
      "interval": "weekly",
      "checks": ["broken", "corruption", "loadTime", "mobile", "accessibility"]
    },
    "performanceMetrics": {
      "track": ["loadTime", "engagement", "conversions", "seoRankings", "imageSearchTraffic"]
    }
  }
}
